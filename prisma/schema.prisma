generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum Role {
  ORG
  USER
}

enum PetEnviroment {
  SMALL
  MEDIUM
  LARGE
}

model Pet {
  name        String
  description String?

  id String @unique @default(uuid())

  created_at DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  city City @relation(fields: [cityId], references: [id])

  address String

  petSize       PetSize
  petEnergy     Int
  petEnviroment PetEnviroment

  userId       String
  cityId       String
  requirements String[] @default([])

  @@map("pets")
}

model User {
  role       Role
  id         String   @unique @default(uuid())
  created_at DateTime @default(now())

  name          String
  email         String @unique
  password_hash String
  phone         String

  Pet Pet[]

  @@map("users")
}

model City {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())

  Pet Pet[]
}
